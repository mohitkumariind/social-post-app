{
  "expo": {
    "name": "Social Post",
    "slug": "social-post-new",
    "version": "1.0.0",
    "icon": "./assets/images/splash-logo.png",
    "splash": {
      "image": "./assets/images/splash-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FCAC12"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Save and share your posts to the photo library",
        "NSPhotoLibraryAddUsageDescription": "Save videos and images to the photo library",
        "NSCameraUsageDescription": "Use camera for profile and content"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash-logo.png",
        "backgroundColor": "#FCAC12"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/images/splash-logo.png"
    }
  }
}
